/* pages/event/event.wxss */
.event-container {
  padding-bottom: 100px;
  background-color: #111111;
}

.border-top-gray {
  border-top: 1rpx solid #333333;
}

.title-padding {
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 10px;
}

.event-padding {
  padding-left: 25px!important;
  padding-right: 25px!important;
}

.event-tag {
  margin-bottom: 5px;
  font-weight: normal;
}

.event-image {
  width: 100%;
  height: 260px;
  margin-top: 10px;
}

.event-content {
  max-height: none;
}

.description {
  white-space: pre-wrap;
}

.item-container {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  margin-left: 25px!important;
  margin-right: 25px!important;
  border-top: 1px solid #333333!important;
}

.color-gray {
  color: gray;
}

.chat-item {
  height: 120rpx!important;
}

.chat-content {
  left: 120rpx!important;
}

.latest-chat-action {
  width: 200rpx!important;
}

.latest-chat {
  max-height: 25px;
}

.my-modal {
  background-color: #1b1b1b!important;
}

.modal-header {
  color: #d8d8d8!important;
}

.modal-body {
  background-color: #222222!important;
}

.modal-footer {
  color: #d8d8d8!important;
}

.modal-item-title {
  color: #d8d8d8!important;
}

.modal-quantity {
  display: flex;
  flex-direction: row;
}

.modal-quantity-value {
  width: 50px;
  height: 33px;
  font-weight: bold;
  text-align: center;
  color: #d8d8d8!important;
  padding-top: 5px;
}

.cart-count {
  padding-bottom: 14px;
  padding-left: 5px;
}

.item-orders {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-top: 15px;
  margin-bottom: 15px;
}

.avatars-container {
  flex-grow: 1;
  padding-right: 15px;
}

.order-btn-container {
  flex-grow: 0;
}

.order-avatar {
  margin-right: -10px;
  margin-bottom: 5px;
}

.my-avatar {
  margin-right: -10px;
  margin-bottom: 5px;
  border: 2px solid #f0b510!important;
}

.order-item {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.order-item-title {
  flex-grow: 1;
  padding: 12px 5px 12px 25px;
}

.order-item-quantity {
  flex-grow: 0;
  padding: 12px 25px 12px 5px;
}

.my-item-order {
  height: 100rpx!important;
}

.item-order-username {
  left: 120rpx!important;
}

.my-big-modal {
  padding-top: 100px;
  padding-bottom: 100px;
}

.my-user-order {
  height: 100rpx!important;
}

.my-order-quantity {
  margin-left: 5px;
  margin-right: -50px;
}

.my-order-action {
  display: inline;
}

.my-order-title {
  width: 60px;
}

.my-order-note {
  width: 220px;
}

.history-order {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 47px!important;
}

.history-order-title {
  flex-grow: 1;
  padding: 12px 5px 12px 25px;
}

.history-order-price {
  flex-grow: 0;
  padding: 12px 25px 12px 5px;
}
