/* pages/event/event.wxss */
.event-container {
  padding-bottom: 100px;
  background-color: #111111;
}

.border-top-gray {
  border-top: 1rpx solid #333333;
}

.title-padding {
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 10px;
}

.event-padding {
  padding-left: 25px!important;
  padding-right: 25px!important;
}

.event-tag {
  margin-bottom: 5px;
  font-weight: normal;
}

.event-image {
  width: 100%;
  height: 260px;
  margin-top: 10px;
}

.event-content {
  max-height: none;
}

.description {
  white-space: pre-wrap;
}

.color-gray {
  color: gray;
}

.latest-chat {
  max-height: 25px;
}

.refresh-badge {
  float: right;
  position: relative;
  top: -5px;
  right: 5px;
}
